{
  "name": "@pontoon-addon/intro",
  "version": "0.0.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@pontoon-addon/commons": "*",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^3.4.4",
    "webextension-polyfill": "^0.7.0"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.15",
    "@rescripts/rescript-env": "^0.0.12",
    "@testing-library/jest-dom": "^5.11.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "react-scripts-plugin-no-hashes": "^0.4.0",
    "sinon-chrome": "^3.0.1"
  },
  "eslintConfig": {
    "extends": "react-app",
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "Commons/src/(.*)": "<rootDir>/../commons/src/$1.js",
      "Commons/static/(.*)/(.*)": "<rootDir>/../commons/static/$1/$2"
    }
  },
  "scripts": {
    "lint": "eslint ./src/",
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test --coverage",
    "eject": "rescripts eject"
  },
  "rescripts": [
    "../../../.rescriptsrc.js"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
