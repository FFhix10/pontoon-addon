{
  "name": "@pontoon-addon/content-scripts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "run-s clean webpack:run:context-buttons webpack:run:live-data-provider webpack:run:notifications-bell-icon eslint:run",
    "watch": "run-s clean && run-p webpack:watch:context-buttons webpack:watch:live-data-provider webpack:watch:notifications-bell-icon",
    "test": "jest --ci --config ./jest.config.js --coverage --passWithNoTests # TODO: remove when tests are in place",
    "clean": "rimraf dist",
    "webpack:run:context-buttons": "webpack ./src/context-buttons.js -o ./dist/context-buttons.js --config ./webpack.config.js",
    "webpack:run:live-data-provider": "webpack ./src/live-data-provider.js -o ./dist/live-data-provider.js --config ./webpack.config.js",
    "webpack:run:notifications-bell-icon": "webpack ./src/notifications-bell-icon.js -o ./dist/notifications-bell-icon.js --config ./webpack.config.js",
    "webpack:watch:context-buttons": "webpack ./src/context-buttons.js -o ./dist/context-buttons.js --config ./webpack.config.js --watch",
    "webpack:watch:live-data-provider": "webpack ./src/live-data-provider.js -o ./dist/live-data-provider.js --config ./webpack.config.js --watch",
    "webpack:watch:notifications-bell-icon": "webpack ./src/notifications-bell-icon.js -o ./dist/notifications-bell-icon.js --config ./webpack.config.js --watch",
    "eslint:run": "eslint --config ./.eslintrc.yml ./src/",
    "eslint:fix": "eslint --config ./.eslintrc.yml --fix ./src/"
  },
  "dependencies": {
    "@pontoon-addon/commons": "*",
    "webextension-polyfill": "^0.7.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "babel-jest": "^26.6.3",
    "eslint": "^6.8.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "engines": {
    "node": "^14.0.0",
    "yarn": "^1.22.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
