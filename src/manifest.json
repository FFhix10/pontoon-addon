{
  "applications": {
    "gecko": {
      "id": "pontoon-tools@mikk.cz",
      "strict_min_version": "55.0"
    }
  },
  "manifest_version": 2,
  "name": "Pontoon Tools",
  "description": "Tools for Pontoon and its integration into the browser.",
  "version": "3.2.0",
  "author": "Michal Stanke",
  "icons": {
    "16": "img/pontoon-logo.svg",
    "48": "img/pontoon-logo.svg",
    "96": "img/pontoon-logo.svg",
    "128": "img/pontoon-logo.svg"
  },
  "permissions": [
    "https://pontoon.mozilla.org/*",
    "storage",
    "contextMenus",
    "tabs",
    "notifications"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "html/options-ui.html",
    "browser_style": true
  },
  "browser_action": {
    "default_title": "Pontoon notifications",
    "default_icon": "img/pontoon-logo.svg",
    "browser_style": true
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "img/pontoon-logo-gray-alpha.svg",
      "38": "img/pontoon-logo-gray-alpha.svg"
    },
    "default_popup": "html/page-action.html"
  },
  "background": {
    "scripts": [
      "js/shared/Options.js",
      "js/shared/RemotePontoon.js",
      "js/background/RemoteLinks.js",
      "js/background/ToolbarButton.js",
      "js/background/PageAction.js",
      "js/background/Notifications.js",
      "js/background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://pontoon.mozilla.org/*"],
      "js": ["js/content-script.js"],
      "run_at": "document_idle"
    }
  ]
}

