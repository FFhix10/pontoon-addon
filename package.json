{
  "name": "pontoon-tools",
  "version": "3.4.5",
  "private": true,
  "description": "Tools for Pontoon and its integration into the browser.",
  "author": "Michal Stanke <mstanke@mozilla.cz>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/MikkCZ/pontoon-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikkCZ/pontoon-tools.git"
  },
  "bugs": {
    "url": "https://github.com/MikkCZ/pontoon-tools/issues"
  },
  "dependencies": {
    "moment": "^2.24.0",
    "moment-duration-format": "^2.3.2",
    "webextension-polyfill": "^0.4.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "jsdoc": "^3.6.2",
    "npm-run-all": "^4.1.5",
    "web-ext": "^3.0.0"
  },
  "scripts": {
    "eslint": "eslint src",
    "web-ext-lint": "web-ext lint -s src",
    "lint": "npm-run-all eslint web-ext-lint",
    "pretest": "yarn run lint",
    "test": "echo 'No tests!'",
    "doc": "jsdoc ./src ./README.md -r -d ./docs",
    "prebuild": "yarn run test",
    "build-chrome": "cp -r ./src ./build-chrome && mv ./build-chrome/manifest-chrome.json ./build-chrome/manifest.json && web-ext build -s build-chrome -a web-ext-artifacts/chrome",
    "build-firefox": "web-ext build -s src -a web-ext-artifacts/mozilla",
    "build": "npm-run-all build-firefox build-chrome",
    "clean": "rm -rf ./docs ./web-ext-artifacts ./build-chrome"
  }
}
